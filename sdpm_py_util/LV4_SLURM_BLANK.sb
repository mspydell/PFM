#!/bin/bash

# job name
#SBATCH --job-name=LV4_FORECAST

# slurm job output file
#SBATCH --output=%j.out

# partition of nodes to use
#SBATCH --partition=$partition$

# number of MPI tasks
#SBATCH --ntasks=$np$

# number of cpus for a task
#SBATCH --cpus-per-task=1
#SBATCH --mem=128G

# number of nodes to use
#SBATCH --nodes=$nnodes$

# number of tasks per node
#SBATCH --ntasks-per-node=36

# max time for the simulation, D-HH:MM
#SBATCH --time=$lv4_max_time$


module purge

module load gcc/11.2.0
module load openmpi/gcc/64/4.1.5
module load hdf5/1.14.3
module load netcdf/mpicc/4.8.1
module load slurm

export LD_LIBRARY_PATH=/cm/shared/apps/netcdf/gcc/64/4.8.1/lib:$LD_LIBRARY_PATH

MYAPP=$lv4_executable$

mpirun -v -np $np$  $MYAPP $lv4_infile_local$  > $lv4_logfile_local$

